# DeepSC Environment Configuration
# Copy this file to .env and modify the paths as needed for your system

# Base project paths
DEEPSC_PROJECT_ROOT=$PWD
DEEPSC_DATA_ROOT=$DEEPSC_PROJECT_ROOT/data
DEEPSC_SCRIPTS_ROOT=$DEEPSC_PROJECT_ROOT/scripts
DEEPSC_LOGS_ROOT=$DEEPSC_PROJECT_ROOT/logs

# Path of storing the data index, data result and query list for cellxgene
DATA_PATH_CELLXGENE=$DEEPSC_DATA_ROOT/cellxgene/raw
INDEX_PATH_CELLXGENE=$DEEPSC_DATA_ROOT/index_list
DOWNLOAD_SCRIPTS_ROOT_CELLXGENE=$DEEPSC_SCRIPTS_ROOT/data/download/cellxgene
QUERY_PATH_CELLXGENE=$DOWNLOAD_SCRIPTS_ROOT_CELLXGENE/query_list.txt

# Path of storing the data for 3ca
DATA_PATH_3CA=$DEEPSC_DATA_ROOT/3ca/raw

DEEPSC_HGNC_DATABASE=$DEEPSC_SCRIPTS_ROOT/data/preprocessing/HGNC_database.txt
DEEPSC_GENE_MAP_PATH=$DEEPSC_SCRIPTS_ROOT/data/preprocessing/gene_map.csv

INTERMEDIATE_ARTIFACTS_TEMP=$DEEPSC_DATA_ROOT/intermediate_artifacts
TEMPORARY_DATA_PATH_3CA=$DEEPSC_DATA_ROOT/3ca/TEMPORARY_DATA
TEMPORARY_DATA_PATH_CXG=$DEEPSC_DATA_ROOT/cellxgene/TEMPORARY_DATA

MAPPED_DATA_PATH_3CA=$TEMPORARY_DATA_PATH_3CA/mapped_batch_data
MERGED_DATA_PATH_3CA=$TEMPORARY_DATA_PATH_3CA/merged_batch_data

DEEPSC_CELLXGENE_PRIMARY_DATA_PATH=$TEMPORARY_DATA_PATH_CXG/primary
DATASET_BEFORE_SHUFFEL=$DEEPSC_DATA_ROOT/processed/npz_data_before_shuffel
SHUFFEL_PLAN_PATH=$INTERMEDIATE_ARTIFACTS_TEMP/shuffel_plan.csv
DATASET_SHUFFELED=$DEEPSC_DATA_ROOT/processed/npz_data_after_shuffel
# URLs
DEEPSC_3CA_BASE_URL="https://www.weizmann.ac.il/sites/3CA/"


# WANDB Configuration (optional)
WANDB_PROJECT=DeepSC
WANDB_TEAM=your_team_name
# Results/checkpoints directory
DEEPSC_RESULTS_ROOT=$DEEPSC_PROJECT_ROOT/results
