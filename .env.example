# DeepSC Environment Configuration
# Copy this file to .env and modify the paths as needed for your system

# Base project paths
DEEPSC_PROJECT_ROOT="/home/xxxx/DeepSC"
DEEPSC_DATA_ROOT="/home/xxxx/DeepSC/data"
DEEPSC_SCRIPTS_ROOT="/home/xxxx/DeepSC/scripts"

# Path of storing the data index, data result and query list for cellxgene
INDEX_PATH_CELLXGENE="/home/xxxx/DeepSC/data/index_list"
QUERY_PATH_CELLXGENE="/home/xxxx/DeepSC/scripts/download/cellxgene/query_list.txt"
DATA_PATH_CELLXGENE="/home/xxxx/DeepSC/data"

# Path of storing the data for 3ca
DATA_PATH_3CA="/home/xxxx/DeepSC/data/3ca/raw"
MAPPED_DATA_PATH_3CA="/home/xxxx/DeepSC/mapped_batch_data/3ca"
MERGED_DATA_PATH_3CA="/home/xxxx/DeepSC/data/3ca/merged_batch_data"

# Processing configuration paths
DEEPSC_HGNC_DATABASE="/home/xxxx/DeepSC/scripts/preprocessing/HGNC_database.txt"
DEEPSC_GENE_MAP_PATH="/home/xxxx/DeepSC/scripts/preprocessing/gene_map.csv"
DEEPSC_CANCER_LIST_PATH="/home/xxxx/DeepSC/scripts/download/cellxgene/cancer_list.txt"

# Configured paths for different components
DEEPSC_TRIPLECA_PATH="/home/xxxx/DeepSC/data/3ca/raw"
DEEPSC_CELLXGENE_PATH="/home/xxxx/DeepSC/data/cellxgene"

# URLs
DEEPSC_3CA_BASE_URL="https://www.weizmann.ac.il/sites/3CA/"

# Path of storing the logs
LOG_PATH="/home/xxxx/DeepSC/logs"

# WANDB Configuration (optional)
WANDB_PROJECT="DeepSC"
WANDB_TEAM="your_team_name"
